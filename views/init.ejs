<!-- views/init.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Voting System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <style>
    body {
      background-color: #f8f9fa;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      color: #007bff;
      margin-bottom: 20px;
    }

    a {
      display: block;
      padding: 10px 20px;
      margin: 10px;
      text-align: center;
      text-decoration: none;
      font-size: 1.5em;
      color: #ffffff;
      background-color: #007bff;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    a:hover {
      background-color: #0056b3;
    }

    #background-svg {
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
    }
  </style>
</head>

<body>
  <img src="/init-background" id="background-svg" alt="Background SVG Image">
  
  <div class="text-center">
    <h1>Welcome to the Voting System</h1>
    <a href="/create-room" class="btn btn-primary"  style="font-size: 20px;">Create Room</a>
    <a href="/join-room" class="btn btn-success"  style="font-size: 20px;">Join Room</a>
  </div>
</body>

</html>
